<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.blogspot.techdroidsz.i_aid.RegisterActivity"
    android:background="#68ffa7">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="100dp"
        android:text="Create New Account"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/reg_name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:hint="Display Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/reg_email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_name"
        android:hint="Email"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:layout_centerHorizontal="true"
        android:id="@+id/reg_pass"
        android:layout_below="@+id/reg_email"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/reg_create_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/reg_pass"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button_red"
        android:text="Create Account"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:textColor="#f44336" />
    <Button
        android:id="@+id/log_page_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/reg_create_btn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:text="Already Member?"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:textColor="#f44336" />


</RelativeLayout>
